{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16", // Use node16 to support import.meta
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16", // Ensure module resolution aligns with node16
    "types": ["node"]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}